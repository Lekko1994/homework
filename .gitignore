#include <iostream>
#include <string>
using namespace std;

int main(int argc, const char * argv[]) {
    cout<<"Welcome to the program!"<<endl;
    cout<<"Please enter 3-digits number"<<endl;
    int input;
    do{
    cin>>input;
        if(input<=99 || input>=1000){
            cout<<"Error. Please give it another try"<<endl;}
    }while(input<=99 || input>=1000);

    int A=input/100;
    int B =(input % 100) / 10;
    int C = (input % 10)/1;
    
    cout<<"A="<<A<<endl;
    cout<<"B="<<B<<endl;
    cout<<"C="<<C<<endl;
    
    int BCA=(B*100)+(C*10)+(A*1);
    int ABC=(A*100)+(B*10)+(C*1);
    int CAB=(C*100)+(A*10)+(B*1);
    
    cout<<"BCA="<<BCA<<endl;
    cout<<"ABC="<<ABC<<endl;
    cout<<"CAB="<<CAB<<endl;
    
    int X=ABC%11;
    int Y=BCA%11;
    int Z=CAB%11;
    
    cout<<"X="<<X<<endl;
    cout<<"Y="<<Y<<endl;
    cout<<"Z="<<Z<<endl;
    
    int P=X+Y;
    int R=Y+Z;
    int Q=Z+X;
    
    cout<<"P="<<P<<endl;
    cout<<"R="<<R<<endl;
    cout<<"Q="<<Q<<endl;
 
    return 0;
}
